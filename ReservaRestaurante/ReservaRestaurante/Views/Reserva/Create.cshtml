@model ReservaRestaurante.Models.Reserva

<h2>Nova Reserva</h2>

<form asp-action="Create" method="post">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="ClienteId">Cliente</label>
        <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.Clientes">
        </select>
        <span asp-validation-for="ClienteId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cliente.Telefone">Contato</label>
        <select asp-for="Cliente.Telefone" class="form-control" asp-items="ViewBag.Contato"></select>
        <span asp-validation-for="Cliente.Telefone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="QuantidadePessoas">Quantidade de pessoas</label>
        <input asp-for="QuantidadePessoas" class="form-control" asp-items="ViewBag.Reservas" />
        <span asp-validation-for="QuantidadePessoas" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataReserva">Data da reserva</label>
        <input asp-for="DataReserva" class="form-control" type="date" />
        <span asp-validation-for="DataReserva" class="text-danger"></span>
    </div>
    <!--
    <div class="form-group">
        <label asp-for="HoraReserva">Hora da reserva</label>
        <input asp-for="HoraReserva" class="form-control" type="time" />
        <span asp-validation-for="HoraReserva" class="text-danger"></span>
    </div>
    -->
    <button type="submit" class="btn btn-primary">Criar Locação</button>
</form>
