@model List<Cliente>

<h2>Lista de Clientes</h2>
<a class="btn btn-primary" asp-controller="Cliente" asp-action="Create">Novo Cliente</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>            
            <th>Telefone</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Nome</td>                
                <td>@cliente.Telefone</td>
                <td>
                    <a class="btn btn-info" asp-controller="Cliente" asp-action="Edit" asp-route-id="@cliente.IdCliente">Editar</a>
                    <a class="btn btn-danger" asp-controller="Cliente" asp-action="Delete" asp-route-id="@cliente.IdCliente">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>